# QuickTools - Environment Configuration
# Copy this file to .env and fill in your values

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-change-this-in-production

# Database (PostgreSQL - recommended for production)
DATABASE_URL=postgresql://quicktools:your_password@localhost:5432/quicktools
DB_PASSWORD=your_secure_password_here

# For local development with Docker:
# DATABASE_URL=postgresql://quicktools:quicktools_dev_password@localhost:5432/quicktools
# DB_PASSWORD=quicktools_dev_password

# Legacy SQLite (not recommended):
# DATABASE_URL=sqlite:///./quicktools.db

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Frontend URL (for Stripe redirects and success pages)
FRONTEND_URL=http://localhost:5000

# Server Configuration
HOST=0.0.0.0
PORT=5000
